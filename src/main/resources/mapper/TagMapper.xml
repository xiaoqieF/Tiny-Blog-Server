<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fxd.tinyBlogServer.dao.TagMapper">

    <select id="getAllTags" resultType="com.fxd.tinyBlogServer.pojo.Tag">
        select * from t_tag;
    </select>

    <insert id="addTag">
        insert into t_tag(name) values(#{name});
    </insert>

    <delete id="deleteTag">
        delete from t_tag where id = #{id};
    </delete>
    <select id="getTagByName" resultType="com.fxd.tinyBlogServer.pojo.Tag">
        select * from t_tag where name = #{name};
    </select>
</mapper>